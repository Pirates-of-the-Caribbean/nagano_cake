.genre_search{
  border : solid 1px ;
  text-align:center;
}
.genre{
  border-right : solid 1px ;
  border-left : solid 1px ;
  border-bottom : solid 1px ;
  text-align : center;
}
.top-image{
  width:500px;
  height: 350px ;
  background-image: url("<%= asset_path('cake_top.jpg')%>");
  background-size:cover;
  position: relative;
}

.top-text{
  color: white;
  background-color: rgba(0,0,0,0.5);
  position: absolute;
  bottom: 0;
}

.recommend-items{
  display: flex;
  background-color: lightgreen;
}
.recommend-items > div{
  width:25%;
  height: 150px;
  margin : 20px;
  background-color: lightblue;
}
