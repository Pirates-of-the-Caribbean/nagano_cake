<div class = "container">
  <div class = "row">
    <div class = "col-sm-offset-2">
      <br>
      <div class = "headline">新規会員登録</div><br><br>
    </div>


<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
                  <%= render "public/shared/error_messages", resource: resource %>
    <div class = "row">
      <div class = "col-sm-offset-3 col-sm-6">
        <table class ="table-no-border">


                  <div class="field">
                    <tr>
                      <th>名前</th>
                      <td>(姓)　 <%= f.text_field :last_name %>　(名) 　<%= f.text_field :first_name %></td>
                    </tr>
                  </div>

                  <div class="field">
                    <tr>
                      <th>フリガナ</th>
                      <td>(セイ) <%= f.text_field :last_name_kana %>　(メイ) <%= f.text_field :first_name_kana %></td>
                    </tr>
                  </div>

                  <div class="field">
                    <tr>
                      <th>メールアドレス</th>
                      <td><%= f.email_field :email, autofocus: true, autocomplete: "email" %></td>
                    </tr>
                  </div>

                  <div class="field">
                    <tr>
                      <th>郵便番号(ハイフンなし)</th>
                      <td><%= f.text_field :postcode %></td>
                    </tr>
                  </div>

                  <div class="field">
                    <tr>
                      <th>住所</th>
                      <td><%= f.text_field :address, size:'55px' %></td>
                    </tr>
                  </div>

                  <div class="field">
                    <tr>
                      <th>電話番号(ハイフンなし)</th>
                      <td><%= f.telephone_field :telephone_number %></td>
                    </tr>
                  </div>

                  <div class="field">
                    <tr>
                      <th>パスワード(6文字以上)</th>
                        <td>
                        <%= f.password_field :password, autocomplete: "new-password" %>
                      </td>
                    </tr>
                  </div>



                  <div class="field">
                    <tr>
                      <th>パスワード(確認用)</th>
                      <td><%= f.password_field :password_confirmation, autocomplete: "new-password" %></td>
                    </tr>
                  </div>


        </table><br><br>

          <div class="actions">
            <%= f.submit "新規登録", class:"btn btn-success" %>
          </div>
          <% end %>
        </div>
      </div>

      <div class="row">
        <div class="col-sm-offset-2">
          <br>
          <div class = "headline">既に登録済の方</div>
        </div>

        <div class="row">
          <div class="col-sm-offset-3">
            <br><%= link_to"こちら",new_customer_session_path %>からログインして下さい。<br>
          </div>
</div>
