 <div class ="col-sm-2">
 	<div class = "genre_search">
 		<h4>ジャンル検索</h4>
 	</div>
 	<div class = "genre">
 		<br>

 		<% @genres.each do |genre| %>
 		<%= link_to genre.name, items_path(genre_id: genre.id) %>   <br><br>
 		<% end %>

 	</div>
 </div>

 <% @items.each do |item| %>
 <tr>
 	<td>
 		<%= link_to "詳細" ,item_path(item.id) %>
 		<%= attachment_image_tag item, :image, :fill, 40, 40, fallback: 'no_image.jpg' %>
 		<%= item.name %>
 		<td><%= item.price %></td>
 	</tr>
 </tbody>

 <% end %>