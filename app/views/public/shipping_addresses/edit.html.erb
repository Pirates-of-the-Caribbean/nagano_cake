<div class="edit-shipping_address" >
	<div class="container">
		<div class="row">
			<div class="col-sm-3">
				<h3><span class="label label-default">配送先編集</span></h3>
			</div>
		</div>

		<div class="row">
		<%= form_for(@shipping_address) do |f| %>
			<div class="col-sm-8 col-sm-offset-4">
				<table>
					<tr>
						<th>郵便番号(ハイフンなし)</th>
						<td><%= f.text_field :postcode %></td>
					</tr>
					<tr>
						<th>住所</th>
						<td><%= f.text_field :address %></td>
					</tr>
					<tr>
						<th>宛名</th>
						<td><%= f.text_field :name %></td>
					</tr>
				</table>
			</div>
			<div class="col-sm-offset-8 col-sm-2 col-sm-2">
				<%= f.submit "編集する" %>
			</div>
		<% end %>
		</div>
	</div>
</div>