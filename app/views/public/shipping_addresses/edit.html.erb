<div class="edit-shipping_address" >
	<div class="container">
		<div class="row">
			<div class="col-sm-offset-1 col-sm-3">
				<br><br><br><div class = "headline">配送先編集</div>
			</div>
		</div>

		<div class="row">
			<div class="col-sm-8">
			<br><%= form_for(@shipping_address) do |f| %>
				<% if @shipping_address.errors.any? %>
				  <div id="error_explanation" class="alert alert-danger">
				    <ul>
				      <% @shipping_address.errors.full_messages.each do |message| %>
				        <li><%= message %></li>
				      <% end %>
				    </ul>
				  </div>
				<% end %>
				<table class="table" id="edit_shipping_address">
					<tr>
						<th class="col-sm-3">郵便番号(ハイフンなし)</th>
						<td class="col-sm-9"><%= f.text_field :postcode %></td>
					</tr>
					<tr>
						<th>住所</th>
						<td><%= f.text_field :address, size: "60" %></td>
					</tr>
					<tr>
						<th>宛名</th>
						<td><%= f.text_field :name %></td>
					</tr>
				</table>
			</div>
			<div class="col-sm-offset-8 col-sm-4">
				<%= f.submit "編集する", class: "btn btn-primary" %>
			</div>
			<% end %>
		</div>
	</div>
</div>
