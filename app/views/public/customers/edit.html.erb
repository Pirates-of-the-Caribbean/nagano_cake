<div class="customer-edit">
	<div class="container">
		<div class="row">
			<div class="col-sm-2">
				<h3><span class="label label-default">登録情報編集</span></h3>
			</div>
		</div>
		<div class="row">
			<div class="col-sm-8">
				<%= form_for(current_customer) do |f| %>
				<% if current_customer.errors.any? %>
				  <div id="error_explanation" class="alert alert-danger">
				    <ul>
				      <% current_customer.errors.full_messages.each do |message| %>
				        <li><%= message %></li>
				      <% end %>
				    </ul>
				  </div>
				<% end %>

				<table>
					<tr>
						<td>名前</td>
						<td>(姓)<%= f.text_field :last_name %>(名)<%= f.text_field :first_name %></td>
					</tr>
					<tr>
						<td>フリガナ</td>
						<td>(セイ)<%= f.text_field :last_name_kana %>(メイ)<%= f.text_field :first_name_kana %></td>
					</tr>
					<tr>
						<td>メールアドレス</td>
						<td><%= f.email_field :email %></td>
					</tr>
					<tr>
						<td>郵便番号(ハイフンなし)</td>
						<td><%= f.text_field :postcode %></td>
					</tr>
					<tr>
						<td>住所</td>
						<td><%= f.text_field :address %></td>
					</tr>
					<tr>
						<td>電話番号(ハイフンなし)</td>
						<td><%= f.telephone_field :telephone_number %></td>
					</tr>
				</table>
				<%= f.submit "編集内容を保存する", class: "btn btn-primary" %>
				<%= link_to "退会する", customers_withdraw_path, class: "btn btn-danger" %>
				<% end %>
			</div>
		</div>
	</div>
</div>