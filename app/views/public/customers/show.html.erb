<div class="main">
<div class="container">
	<div class="row">
		<div class="col-sm-offset-1 col-sm-1">
			<h3><span class="label label-default">マイページ</span></h3>
		</div>
	</div>

	<div class="row">
		<div class="col-sm-8">
			<h4>登録情報
				<%= link_to "編集する", edit_customer_path(current_customer.id), class: "btn btn-primary" %>
				<%= link_to "パスワードを変更する", edit_customer_password_path, class: "btn btn-primary" %>
			</h4>
		</div>
	</div>

	<div class= "row">
		<div class= "col-sm-8">
			<table class="table table-bordered" id="mypage_table">
				<tr>
					<th class="col-sm-2">氏名</th>
					<td><%= current_customer.last_name %><%= current_customer.first_name %></td>
				</tr>
				<tr>
					<th class="col-sm-2">カナ</th>
					<td><%= current_customer.last_name_kana %><%= current_customer.first_name_kana %></td>
				</tr>
				<tr>
					<th class="col-sm-2">郵便番号</th>
					<td><%= current_customer.postcode %></td>
				</tr>
				<tr>
					<th class="col-sm-2">住所</th>
					<td><%= current_customer.address %></td>
				</tr>
				<tr>
					<th class="col-sm-2">電話番号</th>
					<td><%= current_customer.telephone_number %></td>
				</tr>
				<tr>
					<th class="col-sm-2">メールアドレス</th>
					<td><%= current_customer.email %></td>
				</tr>
			</table>
		</div>
	</div>

	<div class="col-sm-4">
	<table class="table row" id="menu_table">
		<tr>
			<th class="col-sm-5"><h4>配送先一覧</h4></th>
			<td class="col-sm-7"><%= link_to "一覧を見る", shipping_addresses_path, class: "btn btn-primary" %></td>
		</tr>
		<tr>
			<th class="col-sm-5"><h4>注文履歴</h4></th>
			<td class="col-sm-7"><%= link_to "一覧を見る", orders_path, class: "btn btn-primary" %></td>
		</tr>
	</table>
</div>
</div>
</div>
