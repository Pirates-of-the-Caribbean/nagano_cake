<div class="main">
<div class="container">
	<div class="row">
		<div class="col-sm-2">
			<h3><span class="label label-default">マイページ</span></h3>
		</div>
	</div>

	<div class="row">
		<div class="col-sm-8">
			<h5>登録情報
				<%= link_to "編集する", edit_customer_path(current_customer.id), class: "btn btn-primary" %>
				<%= link_to "パスワードを変更する", edit_customer_password_path, class: "btn btn-primary" %>
			</h5>

			<table class="table">
				<tr>
					<td>氏名</td>
					<td><%= current_customer.last_name %><%= current_customer.first_name %></td>
				</tr>
				<tr>
					<td>カナ</td>
					<td><%= current_customer.last_name_kana %><%= current_customer.first_name_kana %></td>
				</tr>
				<tr>
					<td>郵便番号</td>
					<td><%= current_customer.postcode %></td>
				</tr>
				<tr>
					<td>住所</td>
					<td><%= current_customer.address %></td>
				</tr>
				<tr>
					<td>電話番号</td>
					<td><%= current_customer.telephone_number %></td>
				</tr>
				<tr>
					<td>メールアドレス</td>
					<td><%= current_customer.email %></td>
				</tr>
			</table>

			<h5>配送先一覧
				<%= link_to "一覧を見る", shipping_addresses_path, class: "btn btn-primary" %>
			</h5>

			<h5>注文履歴
				<%= link_to "一覧を見る", orders_path, class: "btn btn-primary" %>
			</h5>
		</div>
	</div>
</div>
</div>
