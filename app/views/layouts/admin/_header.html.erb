<header>
	<div class="container">
		<nav class="navbar navbar-default row">
			<div class="navbar-header">
				<button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbarEexample4">
					<span class="sr-only">Toggle navigation</span>
					<span class="icon-bar"></span>
					<span class="icon-bar"></span>
					<span class="icon-bar"></span>
				</button>
				<a class="navbar-brand" href="/admin/">
				</a>
			</div>

			<% if admin_signed_in? %>
				<div class="collapse navbar-collapse navbar-right" id="navbarEexample4">
					<%= link_to "商品一覧", admin_items_path, class: "btn btn-default navbar-btn" %>
					<%= link_to "会員一覧", admin_customers_path, class: "btn btn-default navbar-btn" %>
					<%= link_to "注文履歴一覧", admin_orders_path, class: "btn btn-default navbar-btn" %>
					<%= link_to "ジャンル一覧", admin_genres_path, class: "btn btn-default navbar-btn" %>
					<%= link_to "ログアウト", destroy_admin_session_path, method: :delete,class: "btn btn-default navbar-btn" %>
				</div>

				<div class="collapse navbar-collapse navbar-right" id="navbarEexample4">
					<div class="navbar-form" role="search">
						<div class="input-group">
						<%# 検索フォーム %>
							<%= form_tag(admin_search_path, method: :get) do %>
								<%= select_tag 'search[model]', options_for_select({ "顧客名検索" => "customer", "商品名検索" => "item"}) %>　
								<%= text_field_tag 'search[content]'%>　
								<span class="input-group-btn">
								<%= submit_tag "検索", class: "btn btn-default " %>
								</span>
							<% end %>
							<!-- 検索フォームここまで -->
						</div>
					</div>
				</div>
				
			<% else %>
				<div class="collapse navbar-collapse navbar-right" id="navbarEexample4">
					<%= link_to "商品一覧", admin_items_path, class: "btn btn-default navbar-btn" %>
					<%= link_to "新規登録", new_customer_registration_path, class: "btn btn-default navbar-btn" %>
					<%= link_to "ログイン", new_admin_session_path, class: "btn btn-default navbar-btn" %>
				</div>
			<% end %>
		</nav>
	</div>
</header>
