	<h2>商品一覧</h2>
<%= link_to "ジャンル" , admin_genres_path %>
<%= link_to "登録" , new_admin_item_path %>
<table class="table table-striped">
	<thead>
			<tr>
				<th>商品ID</th>
				<th>商品名</th>
				<th>税抜価格</th>
				<th>ジャンル</th>
				<th>販売ステータス</th>
			</tr>
	</thead>
	<tbody>
				<% @items.each do |item| %>
			<tr>
				<td><%= item.id %></td>
				<td>
					<%= link_to admin_item_path(item.id) do %>
					<%= item.name %>
					<% end %>
				</td>
				<td><%= item.price %></td>
				<td><%= item.genre.name %></td>
				<td><%= item.sale_status %></td>
			</tr>
	</tbody>

	<% end %>
</table>


